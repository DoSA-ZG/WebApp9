@model RPPP_WebApp.Models.Suradnik

@{
    ViewBag.Title = "Novi suradnik";
}

<form asp-action="Create" method="post">

    <td class="text-start">
        <label asp-for="Naziv"></label>
        <span asp-validation-for="Naziv" class="text-danger"></span>
        <input asp-for="Naziv" class="form-control" />
    </td>

    <div class="form-group">
        <label class="form-label">Posao</label>
        <select class="form-control" asp-for="PosaoId" asp-items="ViewBag.Poslovi">
            <option disabled selected value="">Odaberite posao</option>
        </select>
        <div class="form-text"><span asp-validation-for="PosaoId" class="text-danger"></span></div>
    </div>

    <td class="text-start">
        <label asp-for="Oib"></label>
        <span asp-validation-for="Oib" class="text-danger"></span>
        <input asp-for="Oib" class="form-control" maxlength="11" />
    </td>

    <td class="text-start">
        <label asp-for="Adresa"></label>
        <span asp-validation-for="Adresa" class="text-danger"></span>
        <input asp-for="Adresa" class="form-control" />
    </td>

    <td class="text-start">
        <label asp-for="PostanskiBroj"></label>
        <span asp-validation-for="PostanskiBroj" class="text-danger"></span>
        <input asp-for="PostanskiBroj" class="form-control" type="number" max="99999", min="10000" />
    </td>

    <td class="text-start">
        <label asp-for="Grad"></label>
        <span asp-validation-for="Grad" class="text-danger"></span>
        <input asp-for="Grad" class="form-control" />
    </td>

    <div class="form-group">
        <label class="form-label">Vrsta suradnika</label>
        <select class="form-control" asp-for="VrstaSuradnikaId" asp-items="ViewBag.VrsteSuradnika">
            <option disabled selected value="">Odaberite vrstu suradnika</option>
        </select>
        <div class="form-text"><span asp-validation-for="VrstaSuradnikaId" class="text-danger"></span></div>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">
            Odustani
        </a>
    </div>

</form>

@section scripts {
    <partial name="IncludeValidation" />
}