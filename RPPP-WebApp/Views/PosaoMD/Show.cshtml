@model PosaoMDViewModel
@{
    ViewBag.Title = "Posao: " + @Model.Posao.Naziv;
}

<div class="container">
    <div class="row text-center">
        <div class="col-sm-8">
            <h4>
                @Model.Posao.Naziv
            </h4>
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-1 text-left">
            <a class="btn btn-sm btn-primary cancel"
               asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               title="Povratak na popis poslova">
                <i class="fas fa-undo-alt"></i>
            </a>
        </div>
    </div>

    <partial name="PosaoInfo" model="Model.Posao" />

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    @{
                        string[] nazivi = { "Naziv", "Posao", "Oib", "Adresa", "Postanski broj", "Grad", "Vrsta suradnika" };
                        for (int i = 0; i < nazivi.Length; i++) {
                        <th class="text-center">
                            @nazivi[i]
                        </th>
                        }
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var suradnik in Model.Posao.Suradnik) {
                <tr>
                    <td class="text-center col-sm-4">
                        @suradnik.Naziv
                    </td>
                    <td class="text-center col-sm-1">
                        @suradnik.Posao.Naziv
                    </td>
                    <td class="text-center col-sm-1">
                        @suradnik.Oib
                    </td>
                    <td class="text-center col-sm-1">
                        @suradnik.Adresa
                    </td>
                    <td class="text-center col-sm-1">
                         @suradnik.PostanskiBroj
                    </td>
                    <td class="text-center col-sm-1">
                        @suradnik.Grad
                    </td>
                    <td class="text-center col-sm-1">
                        @suradnik.VrstaSuradnika.Naziv
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>