    <td class="text-left">@Model.StupanjDovrsenosti</td>
    <td class="text-left">@Model.Prioritetnost</td>
    <td>
        <a asp-controller="ZadatakV2" asp-action="Edit"
           asp-route-id="@Model.IdZadatak"
           class="btn btn-sm"
