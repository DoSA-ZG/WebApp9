@model ProjektMDViewModel
@{
    ViewBag.Title = "Projekt: " + @Model.Projekt.ImeProjekta;
}

<div class="container">
    <div class="row text-center">
        <div class="col-sm-8">
            <h4>
                @Model.Projekt.ImeProjekta
            </h4>
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-1 text-left">
            <a class="btn btn-sm btn-primary cancel"
               asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               title="Povratak na popis poslova">
                <i class="fas fa-undo-alt"></i>
            </a>
        </div>
    </div>

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    @{
                        string[] nazivi = { "Naziv", "Očekivani početak", "Očekivani završetak", "Budžet", "Vrsta posla" };
                        for (int i = 0; i < nazivi.Length; i++) {
                        <th class="text-center">
                            @nazivi[i]
                        </th>
                        }
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var posao in Model.Projekt.Posao) {
                <tr>
                    <td class="text-center col-sm-4">
                            <a class="clickable-link" asp-action="Edit" asp-controller="Posao" asp-route-id="@posao.Id">@posao.Naziv</a>
                    </td>
                    <td class="text-center col-sm-2">
                        @posao.OcekivaniPocetak.ToString("dd/M/yyyy")
                    </td>
                    <td class="text-center col-sm-2">
                        @posao.OcekivaniZavrsetak.ToString("dd/M/yyyy")
                    </td>
                    <td class="text-center col-sm-2">
                        @posao.Budzet
                    </td>
                    <td class="text-center col-sm-2">
                         @posao.VrstaPosla.Naziv
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>