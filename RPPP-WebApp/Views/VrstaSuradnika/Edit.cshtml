@model RPPP_WebApp.Models.VrstaSuradnika

@{
    ViewBag.Title = "Ažuriranje vrste suradnika";
}

<form asp-route-id="@Model.IdVrstaSuradnika"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      asp-action="Edit"
      method="post">

    <td class="text-start">
        <span asp-validation-for="IdVrstaSuradnika" class="text-danger"></span>
        <input asp-for="IdVrstaSuradnika" class="form-control" type="hidden" />
    </td>

    <td class="text-start">
        <label asp-for="Naziv"></label>
        <span asp-validation-for="Naziv" class="text-danger"></span>
        <input asp-for="Naziv" class="form-control" />
    </td>

    <td class="text-start">
        <label asp-for="Opis"></label>
        <span asp-validation-for="Opis" class="text-danger"></span>
        <input asp-for="Opis" class="form-control" />
    </td>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Ažuriraj</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">
            Odustani
        </a>
    </div>

</form>