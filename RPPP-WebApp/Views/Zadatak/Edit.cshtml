@model RPPP_WebApp.Models.Zadatak

@{
    ViewBag.Title = "Ažuriranje zadatka";
}

<form asp-controller="Zadatak" asp-route-id="@Model.IdZadatak"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      asp-action="Edit"
      method="post">

    <input asp-for="IdZadatak" class="form-control" type="hidden"/>

    <td class="text-start">
        <label asp-for="Naziv"></label>
        <span asp-validation-for="Naziv" class="text-danger"></span>
        <input asp-for="Naziv" class="form-control"/>
    </td>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Ažuriraj</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">
            Odustani
        </a>
    </div>

</form>
