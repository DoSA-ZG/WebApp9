@model RPPP_WebApp.Models.VrstaZahtjeva

@{
    ViewBag.Title = "Ažuriranje vrste zahtjeva";
}

<form asp-route-id="@Model.IdVrsteZahtjeva"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      asp-action="Edit"
      method="post">

    <input asp-for="IdVrsteZahtjeva" class="form-control" type="hidden"/>

    <td class="text-start">
        <label asp-for="NazivVrsteZahtjeva"></label>
        <span asp-validation-for="NazivVrsteZahtjeva" class="text-danger"></span>
        <input asp-for="NazivVrsteZahtjeva" class="form-control"/>
    </td>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Ažuriraj</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">
            Odustani
        </a>
    </div>

</form>