@model RPPP_WebApp.Models.Uloga

@{
    ViewBag.Title = "Nova uloga";
}

<form asp-action="Create" method="post">

    <td class="text-start">
        <label asp-for="NazivUloge">Naziv</label>
        <span asp-validation-for="NazivUloge" class="text-danger"></span>
        <input asp-for="NazivUloge" class="form-control" />
    </td>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">
            Odustani
        </a>
    </div>

</form>

@section scripts {
        <partial name="IncludeValidation" />
}