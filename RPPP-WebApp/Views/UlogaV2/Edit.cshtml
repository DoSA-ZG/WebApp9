@model RPPP_WebApp.Models.Uloga

@{
    ViewBag.Title = "Ažuriranje uloge";
}

<form asp-route-id="@Model.IdUloga"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      asp-action="Edit"
      method="post">

    <td class="text-start">
        <span asp-validation-for="IdUloga" class="text-danger"></span>
        <input asp-for="IdUloga" class="form-control" type="hidden" />
    </td>

    <td class="text-start">
        <label asp-for="NazivUloge">Naziv</label>
        <span asp-validation-for="NazivUloge" class="text-danger"></span>
        <input asp-for="NazivUloge" class="form-control" />
    </td>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Ažuriraj</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">
            Odustani
        </a>
    </div>

</form>