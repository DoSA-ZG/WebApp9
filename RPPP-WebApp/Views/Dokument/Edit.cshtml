@model RPPP_WebApp.Models.Dokument

@{
    ViewBag.Title = "Ažuriranje dokumenta";
}

<form asp-route-id="@Model.DokumentId"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      asp-action="Edit"
      method="post">

    <input asp-for="DokumentId" type="hidden" class="form-control"/>

    <td class="text-start">
        <label asp-for="Naslov"></label>
        <span asp-validation-for="Naslov" class="text-danger"></span>
        <input asp-for="Naslov" class="form-control" />
    </td>

    <div class="form-group">
        <label class="form-label">Projekt</label>
        <select class="form-control" asp-for="ProjektId" asp-items="ViewBag.Projekti">
            <option disabled selected value="">-- Odaberite projekt --</option>
        </select>
        <div class="form-text"><span asp-validation-for="ProjektId" class="text-danger"></span></div>
    </div>

    <div class="form-group">
        <label class="form-label">Kategorija dokumenta</label>
        <select class="form-control" asp-for="KategorijaDokumentaId" asp-items="ViewBag.KategorijeDokumenata">
            <option disabled selected value="">-- Odaberite kategoiju dokumenta --</option>
        </select>
        <div class="form-text"><span asp-validation-for="KategorijaDokumentaId" class="text-danger"></span></div>
    </div>

    <td class="text-start">
        <label asp-for="Sadrzaj"></label>
        <span asp-validation-for="Sadrzaj" class="text-danger"></span>
        <input asp-for="Sadrzaj" class="form-control" />
    </td>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Ažuriraj</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">
            Odustani
        </a>
    </div>

</form>