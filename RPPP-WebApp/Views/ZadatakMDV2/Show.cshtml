@model ZadatakMDV2ViewModel
@{
    ViewBag.Title = "Zadatak: " + @Model.Zadatak.Naziv;
}

<div class="container">
    <div class="row text-center">
        <div class="col-sm-8">
            <h4>
                Pregled osoba zaduženih za @Model.Zadatak.Naziv
            </h4>
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-1 text-left">
            <a class="btn btn-sm btn-primary cancel"
               asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               title="Povratak na popis zadataka">
                <i class="fas fa-undo-alt"></i>
            </a>
        </div>
    </div>

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    @{
                        string[] nazivi = { "Ime", "Prezime", "E-mail", "Telefon", "IBAN", "Uloga"};
                        for (int i = 0; i < nazivi.Length; i++)
                        {
                                <th class="text-center">
                                @nazivi[i]
                                </th>
                        }
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var zaduzenik in Model.Zadatak.ZaduzenaOsoba)
                {
                    <tr>
                        <td class="text-center col-sm-4">
                            @zaduzenik.Osoba.ImeOsobe
                        </td>
                        <td class="text-center col-sm-1">
                            @zaduzenik.Osoba.PrezimeOsobe
                        </td>
                        <td class="text-center col-sm-1">
                            @zaduzenik.Osoba.Email
                        </td>
                        <td class="text-center col-sm-1">
                            @zaduzenik.Osoba.Telefon
                        </td>
                        <td class="text-center col-sm-1">
                            @zaduzenik.Osoba.Iban
                        </td>
                        <td class="text-center col-sm-1">
                            @zaduzenik.Osoba.UlogaNaProjektu.First().Uloga.NazivUloge
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>