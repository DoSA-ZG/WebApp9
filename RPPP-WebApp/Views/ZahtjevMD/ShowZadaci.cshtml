@model ZahtjevMDViewModel
@{
    ViewBag.Title = "Zahtjev: " + @Model.Zahtjev.Naziv;
}

<div class="container">
    <div class="row text-center">
        <div class="col-sm-8">
            <h4>
                @Model.Zahtjev.Naziv
            </h4>
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-1 text-left">
            <a class="btn btn-sm btn-primary cancel"
               asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               title="Povratak na popis zahtjeva">
                <i class="fas fa-undo-alt"></i>
            </a>
        </div>
    </div>

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    @{
                        string[] nazivi = { "Naziv", "Prioritetnost", "Vrijeme isporuke" };
                        for (int i = 0; i < nazivi.Length; i++) {
                        <th class="text-center">
                            @nazivi[i]
                        </th>
                        }
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var zadatak in Model.Zahtjev.Zadatak) {
                <tr>
                    <td class="text-center col-sm-2">
                            <a class="clickable-link" asp-action="Edit" asp-controller="Zadatak" asp-route-id="@zadatak.IdZadatak">@zadatak.Naziv</a>
                    </td>
                    <td class="text-center col-sm-2">
                        @zadatak.Prioritetnost
                    </td>
                    <td class="text-center col-sm-6">
                        @zadatak.VrijemeIsporuke.ToString("dd/M/yyyy")
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>